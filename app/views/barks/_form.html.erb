<div class="input-group">
<%= form_for @bark do |f| %>

  <% if @bark.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@bark.errors.count, "error") %> prohibited
        this Bark from being saved:
      </h2>
      <ul>
        <% @bark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <span class="input-group-addon">
    <%= f.label :title %> <%= f.text_field :title %><br></span>
  <span class="input-group-addon">
    <%= f.label :location %><br>(In 'Bar Name, City, State' format)<br>
    <%= f.text_field :location %><br></span>
  <span class='input-group-addon'>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </span>
  <span class='input-group-addon'>
    <%= f.submit %>
  </span>
<% end %>
</div>