<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this User from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
  </p>

  <p>
    <%= f.label :first_name %>
    <%= f.text_area :first_name %><br>
  </p>

  <p>
    <%= f.label :last_name %>
    <%= f.text_area :last_name %><br>
  </p>

  <p>
    <%= f.label :password_hash %>
    <%= f.password_field :password_hash %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>